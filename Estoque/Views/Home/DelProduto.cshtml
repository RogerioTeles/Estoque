
@{
    ViewBag.Title = "DelProduto";
}

<h2>DelProduto</h2>

@Html.ActionLink("Produto", "Produto", "Home")
@Html.ActionLink("Editar Produto", "EditProduto", "Home")
@using (Html.BeginForm("DelProduto", "Home", FormMethod.Post))
{
    @Html.DropDownList("Produto", null, "SELECIONE UM PRODUTO", new { @class = "Plano", @Id = "produto", type = "text" })
    <input type="submit" value="Deletar Produto" id="btn-Editar" name="" />
    <label>@ViewBag.msg</label>
}

<table class="table-round-corner">
    <tr class="">
        <th>ID</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Quantidade</th>
        <th>Código Categoria</th>
        <th>Categoria</th>
    </tr>

    @{ foreach (var items in ViewBag.Grid)
        {
            <tr class="table-data">
                <td>@items.idProduto</td>
                <td>@items.nomeProduto</td>
                <td>@items.descricao</td>
                <td>@items.quantidade</td>
                <td>@items.Categorias_id</td>
                <td>@items.nome_categoria</td>

            </tr>
        }

    }
</table>